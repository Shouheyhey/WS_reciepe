<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
          <h1 class="text-center">WS_recipe<span>ログイン</span></h1>
        </div>
             <div class="form-group">
              <%= f.email_field :email, autofocus: true,  :placeholder => 'メールアドレスを入力',
              class:"form-control input-lg" %>
              </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力', class:"form-control input-lg" %>
          </div>

          <div class="row">
            <% if devise_mapping.rememberable? -%>
              <div class="col-xs-6"><%= f.check_box :remember_me %> <%= f.label :パスワードを記憶 %></div>

            <div class="submit"><%= f.submit "ログイン",class:"btn btn-block btn-lg btn-primary"%></div>
            <% end %>
        <div class="more_link_box">
        <strong>まだアカウントを持っていませんか？</strong>
        <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
           <% end %>
